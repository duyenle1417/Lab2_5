<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.lab2_6.CustomImageView
        android:id="@+id/gridview_dish_thumbnail_img_item"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/first_thumbnail"
        android:layout_height="220dp" />

    <LinearLayout
        android:id="@+id/layout_description_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_black_mask"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/gridview_dish_thumbnail_img_item">

        <TextView
            android:id="@+id/gridview_dish_name_tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="example"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/gridview_dish_promotion_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_promotion"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</RelativeLayout>